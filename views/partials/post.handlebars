<article class="post">
    <div class="votes">
        <div class="post-icon-up">
            <button type="button" id="like-button"><i class="fa fa-chevron-up"></i></button>
        </div>
        <div class="post-number">
            <input type="text" id="like-number" value="{{votes}}" onfocus="this.blur()" readonly>
        </div>
        <div class="post-icon-down">
            <button type="button" id="dislike-button"><i class="fa fa-chevron-down"></i></button>
        </div>
    </div>
  <div class="post-content">
    <p class="post-text">{{content}}</p>
  </div>
</article>
